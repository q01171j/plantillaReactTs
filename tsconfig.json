{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/": ["src/"],
      "@components": ["src/components"],
      "@hooks": ["src/hooks"],
      "@utils": ["src/utilities"],
      "@layouts": ["src/layouts"],
      "@pages": ["src/pages"],
      "@assets": ["src/assets"],
      "@context": ["src/context"],
    },
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true
  }
}
